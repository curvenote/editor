{
  "name": "@curvenote/monorepo-editor",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "clean": "turbo run clean --parallel && find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "lint": "turbo run lint",
    "lint:format": "turbo run lint:format",
    "test": "turbo run test",
    "test:ci": "turbo run test --filter schema --filter prosemirror* --filter prosemirror-utils",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepublishOnly": "npm run build",
    "changeset": "changeset",
    "version": "changeset version && npm install",
    "publish": "npm run clean && npm run build && changeset publish && git push --follow-tags"
  },
  "devDependencies": {
    "esbuild": "^0.14.49",
    "eslint-config-curvenote": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.10.0",
  "dependencies": {
    "@changesets/cli": "^2.23.2"
  }
}
